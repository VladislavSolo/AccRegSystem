<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "by.stanishevskij.entity.Bus" table = "Bus" catalog = "mydb">
        <id name = "busID" column = "ID" type = "java.lang.Integer"></id>
        <property column="Number" name="number" type="java.lang.String"/>
        <property column="Brand" name="brand" type="java.lang.String"/>
        <property column="Mileage" name="mileage" type="java.lang.Integer"/>
        <set name = "drivers" lazy = "false">
            <key column = "ID"/>
            <one-to-many class="by.stanishevskij.entity.Driver"/>
        </set>
    </class>
</hibernate-mapping>